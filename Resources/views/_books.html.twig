{% if items is not empty %}
    <div class="card-columns">
        {% for item in items %}
            <div class="card">
                {% set src = displayImage(item.imageSrc, app_item_settings.app_book) %}
                {% if src is not empty %}
                    <a href="{{ path('app_book', {id: item.id, slug: item.slug}) }}">
                        <img class="card-img-top" src="{{ src }}" alt="{{ item.name }}">
                    </a>
                {% endif %}
                <div class="card-body" style="padding: 0.75rem;">
                    <h6 class="card-title"><a href="{{ path('app_book', {id: item.id, slug: item.slug}) }}">{{ item.name }}</a></h6>
                    <p class="card-text">
                        <a href="{{ ads(item, 'download') }}" class="card-link btn btn-block btn-sm btn-outline-primary px-3"><i class="fas fa-file-pdf"></i> {{ 'item.download'|themeTrans }}</a>
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}